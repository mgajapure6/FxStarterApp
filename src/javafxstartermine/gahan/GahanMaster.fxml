<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="400.0" minWidth="600.0" stylesheets="@../main.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxstartermine.gahan.GahanMasterController">
    <center>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab closable="false" text="Menu List">
               <content>
                  <VBox>
                     <children>
                        <HBox alignment="CENTER_RIGHT">
                           <children>
                              <Label styleClass="el" text="Search" />
                              <TextField promptText="Search anything" styleClass="el">
                                 <HBox.margin>
                                    <Insets left="10.0" />
                                 </HBox.margin>
                              </TextField>
                           </children>
                           <VBox.margin>
                              <Insets bottom="10.0" top="10.0" />
                           </VBox.margin>
                        </HBox>
                        <TableView prefHeight="200.0" prefWidth="200.0" styleClass="el" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn prefWidth="75.0" text="C1" />
                            <TableColumn prefWidth="75.0" text="C2" />
                          </columns>
                        </TableView>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
               <styleClass>
                  <String fx:value="el" />
                  <String fx:value="tab-btn" />
               </styleClass>
          </Tab>
          <Tab closable="false" text="Add Gahan">
            <content>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <HBox spacing="10.0" style="-fx-border-color: #ccc; -fx-border-width: 0 0 1 0;">
                           <children>
                              <VBox HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="el" stylesheets="@../main.css" text="Loan Amount / Principal Amount" />
                                    <TextField prefWidth="350.0" promptText="Principal Amount" styleClass="el" stylesheets="@../main.css" />
                                 </children>
                              </VBox>
                              <VBox>
                                 <children>
                                    <Label styleClass="el" text="Loan Start Date" />
                                    <DatePicker prefWidth="350.0" promptText="Start Date" styleClass="el" />
                                 </children>
                              </VBox>
                              <VBox>
                                 <children>
                                    <Label styleClass="el" stylesheets="@../main.css" text="Loan Duration Type" />
                                    <ComboBox editable="true" prefWidth="350.0" promptText="Select Duration Type" styleClass="el" />
                                 </children>
                              </VBox>
                              <VBox layoutX="10.0" layoutY="10.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="el" stylesheets="@../main.css" text="Rate Of Interest" />
                                    <ComboBox editable="true" prefWidth="350.0" promptText="Rate Of Interest" styleClass="el" />
                                 </children>
                              </VBox>
                           </children>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                           <padding>
                              <Insets bottom="20.0" />
                           </padding>
                        </HBox>
                        <HBox layoutX="20.0" layoutY="20.0" spacing="10.0" style="-fx-border-color: #ccc; -fx-border-width: 0 0 1 0;">
                           <children>
                              <VBox HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="el" stylesheets="@../main.css" text="Loan Amount / Principal Amount" />
                                    <TextField prefWidth="350.0" promptText="Principal Amount" styleClass="el" stylesheets="@../main.css" />
                                 </children>
                              </VBox>
                              <VBox>
                                 <children>
                                    <Label styleClass="el" text="Loan Start Date" />
                                    <DatePicker prefWidth="350.0" promptText="Start Date" styleClass="el" />
                                 </children>
                              </VBox>
                              <VBox>
                                 <children>
                                    <Label styleClass="el" stylesheets="@../main.css" text="Loan Duration Type" />
                                    <ComboBox editable="true" prefWidth="350.0" promptText="Select Duration Type" styleClass="el" />
                                 </children>
                              </VBox>
                              <VBox layoutX="10.0" layoutY="10.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="el" stylesheets="@../main.css" text="Rate Of Interest" />
                                    <ComboBox editable="true" prefWidth="350.0" promptText="Rate Of Interest" styleClass="el" />
                                 </children>
                              </VBox>
                           </children>
                           <padding>
                              <Insets bottom="20.0" top="10.0" />
                           </padding>
                        </HBox>
                        <TableView prefHeight="200.0" prefWidth="200.0">
                          <columns>
                            <TableColumn prefWidth="75.0" text="C1" />
                            <TableColumn prefWidth="75.0" text="C2" />
                          </columns>
                        </TableView>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
            </content>
               <styleClass>
                  <String fx:value="el" />
                  <String fx:value="tab-btn" />
               </styleClass>
          </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
